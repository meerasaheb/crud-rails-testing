

<%= form_for @schooldetail do |f| %>
<div class ="form">
<h1 id= "newschooldetails">NEW SCHOOL DETAILS </h1>

<div class= "part1">
  <div class="field">
    <%= f.label :name, "SCHOOLNAME" ,id:"schoolname" %>
    <%= f.text_field :schoolname ,required: true%></br>
  </div></br>

  <div class="schoola">
    <%= f.label :name, "ADDRESS",id:"schooladdress" %>
    <%= f.text_area :address ,required: true%></br>
  </div></br>

  <div class="schoolcity">
    <%= f.label :name, "CITY"%></br>
    <%= f.text_field :city,class:"field",required: true %></br>
  </div></br>

  <div class="schoolstate ">
    <%= f.label :name,"STATE"%></br>
    <%= f.text_field :state,class:"field",required: true %>
  </div>

  <div class="schoolstate">
    <%= f.label :name, "PINCODE" %></br>
    <%= f.number_field :pincode,class:"field",required: true %>
  </div>
  </div>
<div class="left-part">

    <%= f.label :name ,"AFFILIATED BOARD:", class:"text-muted" %><br/>
    <div class="field">
    <p>
      <%= f.radio_button :affiliatedboard, 'CBSE', id:"test1"%>
      <label for="test1">
      <span class="test1">CBSE</span></label>
    
    
     
      <%= f.radio_button :affiliatedboard, 'ICSE', id:"test2"%>
      <label for="test2"><span class="test1">ICSE</span></label>
    
    
      <%= f.radio_button :affiliatedboard, 'Matric', id:"test3"%>
      <label for="test3"><span class="test1">ICSE</span></label></br>
    </p></br>
    <p>
      <%= f.radio_button :affiliatedboard, 'State Board', id:"test4"%>
      <label for="test4"><span class="test1">State Board</span></label>
    </p>
  </div>
</div> 
      <div class="actions">
           <%= f.submit  class:"submit" %>
     </div>
  </div>
<% end %>





